<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content"
    android:background="@drawable/background_online_blank"
    tools:context="com.duong.appailatrieuphu.MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/atp__bg_circle_anim"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_icon_retry"
        android:src="@drawable/atp_icon_retry"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:background="@drawable/bg_now_play"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="Now Play"
        android:id="@+id/tv_now_play"
        android:layout_marginTop="55dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_icon_retry"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:id="@+id/tv_high_score"
        android:layout_centerHorizontal="true"
        android:text="High Score"
        android:gravity="center"
        android:background="@drawable/bg_high_score"
        android:layout_below="@id/tv_now_play" />
</RelativeLayout>
